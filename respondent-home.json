{
  "variables": {
    "app_version": null,
    "aws_access_key": null,
    "aws_secret_key": null,
    "git_commit": "{{env `GIT_COMMIT`}}",
    "region": null,
    "subnet_id": null,
    "vpc_id": null
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "{{user `region`}}",
    "source_ami": "ami-9398d3e0",
    "instance_type": "t2.large",
    "ami_name": "respondent-home-v{{user `app_version`}} (built {{isotime \"02-01-2006 15-04-05\"}})",
    "ami_description": "ONS Respondent Home v{{user `app_version`}} ({{user `git_commit`}})",
    "ssh_username": "ec2-user",
    "subnet_id": "{{user `subnet_id`}}",
    "vpc_id": "{{user `vpc_id`}}"
  }],
  "provisioners": [{
    "type": "shell",
    "script": "bootstrap-chef.sh"
  },
  {
    "type": "chef-client",
    "server_url": "https://api.opscode.com/organizations/soapilot",
    "chef_environment": "development",
    "encrypted_data_bag_secret_path": "/etc/chef/encrypted_data_bag_secret",
    "run_list": [
      "recipe[aws-baseos]"
    ],
    "skip_install": true,
    "validation_key_path": "/etc/chef/validation.pem"
  }]
}
