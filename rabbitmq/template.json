{
  "variables": {
    "app_version": null,
    "aws_access_key": null,
    "aws_secret_key": null,
    "region": null,
    "subnet_id": null,
    "source_ami": null,
    "vpc_id": null
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "{{user `region`}}",
    "source_ami": "{{user `source_ami`}}",
    "instance_type": "t2.medium",
    "ami_name": "rabbitmq-v{{user `app_version`}} (built {{isotime \"02-01-2006 15-04-05\"}})",
    "ami_description": "ONS RabbitMQ AMI v{{user `app_version`}}",
    "encrypt_boot": true,
    "ami_block_device_mappings": [
      {
        "device_name": "/dev/sda1",
        "delete_on_termination": true,
        "encrypted": true,
        "volume_size": 16,
        "volume_type": "gp2"
      }
    ],
    "ssh_pty": "true",
    "ssh_username": "centos",
    "subnet_id": "{{user `subnet_id`}}",
    "vpc_id": "{{user `vpc_id`}}"
  }],
  "provisioners": [
    {
      "type": "file",
      "source": "./files/rabbitmq.config",
      "destination": "/tmp/rabbitmq.config"
    },
    {
      "type": "shell",
      "script": "install.sh"
    }]
}
